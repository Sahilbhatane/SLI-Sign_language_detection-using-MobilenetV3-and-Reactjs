# FastAPI Backend Configuration
# Copy this file to .env and update values as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# CORS Configuration
# For development: use "*" for all origins
# For production: set to your Vercel frontend URL
ALLOWED_ORIGINS=*
# Example for production:
# ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-app.com

# Model Configuration
MODEL_PATH=./backend/model.onnx
LABELS_PATH=./backend/class_labels.txt

# Logging Configuration
LOG_LEVEL=INFO

# Performance
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
REQUEST_TIMEOUT=30  # seconds
